---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.jsx';

const rocks = [
  {
    name: 'Petoskey Stone',
    description: 'Fossilized coral found on Michigan beaches, prized for its hexagonal pattern.',
    image: '/images/petoskey-stone.jpg',
  },
  {
    name: 'Lake Superior Agate',
    description: 'Colorful, translucent stones from Lake Superior shores, a rockhound\'s treasure.',
    image: '/images/agate.jpg',
  },
  {
    name: 'Native Copper Nugget',
    description: 'Pure copper nuggets from Michigan\'s Upper Peninsula, often found while detecting.',
    image: '/images/copper-nugget.jpg',
  },
];

const products = [
  { name: 'Garrett AT Pro Metal Detector', link: '/gear', image: '/images/detector.jpg' },
  { name: 'Nokta Pinpointer', link: '/gear', image: '/images/pinpointer.jpg' },
  { name: 'Premium Digging Trowel', link: '/gear', image: '/images/trowel.jpg' },
];
---

<BaseLayout>
  <Fragment slot="head">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </Fragment>

  <!-- Hero Section -->
  <HeroSection client:load />

  <!-- Michigan Rocks Section -->
  <section class="py-20">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-heading mb-4 flex items-center justify-center gap-4">
        <span class="text-accent text-4xl animate-pulse">ğŸ’</span>
        Michigan's Rock Treasures
      </h2>
      <p class="text-lg text-gray-dark max-w-2xl mx-auto">
        Discover the geological wonders waiting to be found in Michigan's diverse landscapes
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4">
      {rocks.map((rock, index) => (
        <div class="group bg-white/50 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-light/30 hover:border-accent/30 hover:-translate-y-2">
          <div class="overflow-hidden rounded-xl mb-6">
            <img 
              src={rock.image} 
              alt={rock.name}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <h3 class="text-2xl font-semibold text-heading mb-3 flex items-center gap-3">
            <span class="text-accent">ğŸ’</span>
            {rock.name}
          </h3>
          <p class="text-gray-dark leading-relaxed">{rock.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Product Showcase -->
  <section class="py-20 bg-gradient-to-r from-accent/5 to-background rounded-3xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-heading mb-4 flex items-center justify-center gap-4">
        <span class="text-accent text-4xl animate-bounce">ğŸ†</span>
        Top Metal Detecting Gear
      </h2>
      <p class="text-lg text-gray-dark max-w-2xl mx-auto">
        Professional-grade equipment trusted by Michigan's most successful treasure hunters
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4">
      {products.map((product, index) => (
        <div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-light/30 hover:border-accent/50 hover:-translate-y-2">
          <div class="overflow-hidden rounded-xl mb-6">
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <h3 class="text-xl font-semibold text-heading mb-3 flex items-center gap-3">
            <span class="text-accent">âš’ï¸</span>
            {product.name}
          </h3>
          <a
            href={product.link}
            class="inline-flex items-center gap-2 text-accent hover:text-accent-hover font-semibold transition-colors duration-300 group-hover:scale-105 transform"
          >
            <span class="text-lg">ğŸ›’</span>
            View Details
          </a>
        </div>
      ))}
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-20 text-center">
    <div class="bg-gradient-to-br from-accent/10 via-background to-accent/5 rounded-3xl p-12 border border-accent/20 shadow-xl">
      <h2 class="text-4xl md:text-5xl font-bold text-heading mb-6 flex items-center justify-center gap-4">
        <span class="text-accent text-4xl animate-pulse">ğŸ—ºï¸</span>
        Start Your Treasure Hunt
      </h2>
      <p class="text-xl text-gray-dark mb-10 max-w-3xl mx-auto leading-relaxed">
        Join thousands of Michigan detectorists who trust our expertise. Explore in-depth guides, 
        gear reviews, and local hotspots to maximize your treasure hunting success.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/blog"
          class="bg-accent hover:bg-accent-hover text-white font-semibold px-8 py-4 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
        >
          Read Expert Guides ğŸ“–
        </a>
        <a
          href="/contact"
          class="border-2 border-accent text-accent hover:bg-accent hover:text-white font-semibold px-8 py-4 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
        >
          Get In Touch âœ‰ï¸
        </a>
      </div>
    </div>
  </section>
</BaseLayout>