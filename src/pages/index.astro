---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.jsx';

const rocks = [
  {
    name: 'Petoskey Stone',
    description: 'Fossilized coral found on Michigan beaches, prized for its hexagonal pattern.',
    image: '/images/petoskey-stone.jpg',
  },
  {
    name: 'Lake Superior Agate',
    description: 'Colorful, translucent stones from Lake Superior shores, a rockhound\'s treasure.',
    image: '/images/agate.jpg',
  },
  {
    name: 'Native Copper Nugget',
    description: 'Pure copper nuggets from Michigan\'s Upper Peninsula, often found while detecting.',
    image: '/images/copper-nugget.jpg',
  },
];

const products = [
  { name: 'Garrett AT Pro Metal Detector', link: '/gear', image: '/images/detector.jpg' },
  { name: 'Nokta Pinpointer', link: '/gear', image: '/images/pinpointer.jpg' },
  { name: 'Premium Digging Trowel', link: '/gear', image: '/images/trowel.jpg' },
];
---

<BaseLayout>
  <Fragment slot="head">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </Fragment>

  <!-- Hero Section -->
  <HeroSection client:load />

  <!-- Michigan Rocks Section -->
  <section class="py-20 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-32 h-32 bg-accent/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-48 h-48 bg-accent/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    
    <div class="text-center mb-16 relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold text-heading mb-4 flex items-center justify-center gap-4">
        <span class="text-accent text-4xl animate-bounce">üíé</span>
        <span class="bg-gradient-to-r from-heading to-accent bg-clip-text text-transparent">
          Michigan's Rock Treasures
        </span>
      </h2>
      <p class="text-lg text-gray-dark max-w-2xl mx-auto leading-relaxed">
        Discover the geological wonders waiting to be found in Michigan's diverse landscapes
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4 relative z-10">
      {rocks.map((rock, index) => (
        <div class="group bg-white/60 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-light/30 hover:border-accent/50 hover:-translate-y-3 hover:rotate-1 relative overflow-hidden">
          <!-- Card Background Effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="overflow-hidden rounded-xl mb-6 relative">
            <img 
              src={rock.image} 
              alt={rock.name}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
              <span class="text-white font-semibold text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200">
                Click to Learn More
              </span>
            </div>
          </div>
          
          <h3 class="text-2xl font-semibold text-heading mb-3 flex items-center gap-3 relative z-10">
            <span class="text-accent group-hover:animate-spin">üíé</span>
            {rock.name}
          </h3>
          <p class="text-gray-dark leading-relaxed relative z-10">{rock.description}</p>
          
          <!-- Shimmer Effect -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Product Showcase -->
  <section class="py-20 bg-gradient-to-br from-accent/10 via-accent/5 to-background rounded-3xl border border-accent/20 shadow-2xl relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full">
        <div class="absolute top-1/4 left-1/4 w-24 h-24 bg-accent/30 rounded-full blur-2xl animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-32 h-32 bg-accent/20 rounded-full blur-2xl animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-3/4 left-3/4 w-20 h-20 bg-accent/40 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>
    </div>
    
    <div class="text-center mb-16 relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold text-heading mb-4 flex items-center justify-center gap-4">
        <span class="text-accent text-4xl animate-bounce">üèÜ</span>
        <span class="bg-gradient-to-r from-heading to-accent bg-clip-text text-transparent">
          Top Metal Detecting Gear
        </span>
      </h2>
      <p class="text-lg text-gray-dark max-w-2xl mx-auto leading-relaxed">
        Professional-grade equipment trusted by Michigan's most successful treasure hunters
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4 relative z-10">
      {products.map((product, index) => (
        <div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-light/30 hover:border-accent/50 hover:-translate-y-3 hover:rotate-1 relative overflow-hidden">
          <!-- Card Glow Effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-accent/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="overflow-hidden rounded-xl mb-6 relative">
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <!-- Overlay on hover -->
            <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
              <div class="text-white font-semibold text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200 text-center">
                <div class="text-2xl mb-2">‚öíÔ∏è</div>
                <div>Premium Quality</div>
              </div>
            </div>
          </div>
          
          <h3 class="text-xl font-semibold text-heading mb-4 flex items-center gap-3 relative z-10">
            <span class="text-accent group-hover:animate-spin">‚öíÔ∏è</span>
            {product.name}
          </h3>
          
          <a
            href={product.link}
            class="inline-flex items-center gap-2 text-accent hover:text-accent-hover font-semibold transition-all duration-300 group-hover:scale-105 transform bg-accent/10 hover:bg-accent/20 px-4 py-2 rounded-xl relative z-10"
          >
            <span class="text-lg group-hover:animate-bounce">üõí</span>
            <span>View Details</span>
            <span class="text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 ml-2">‚Üí</span>
          </a>
          
          <!-- Shimmer Effect -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-20 text-center relative overflow-hidden">
    <div class="bg-gradient-to-br from-accent/15 via-background to-accent/5 rounded-3xl p-12 border border-accent/20 shadow-2xl relative overflow-hidden">
      <!-- Animated Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full">
          <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-accent/30 rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-1/4 right-1/4 w-40 h-40 bg-accent/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s;"></div>
        </div>
      </div>
      
      <div class="relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold text-heading mb-6 flex items-center justify-center gap-4">
          <span class="text-accent text-4xl animate-bounce">üó∫Ô∏è</span>
          <span class="bg-gradient-to-r from-heading to-accent bg-clip-text text-transparent">
            Start Your Treasure Hunt
          </span>
        </h2>
        <p class="text-xl text-gray-dark mb-10 max-w-3xl mx-auto leading-relaxed">
          Join thousands of Michigan detectorists who trust our expertise. Explore in-depth guides, 
          gear reviews, and local hotspots to maximize your treasure hunting success.
        </p>
        
        <!-- Enhanced CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a
            href="/blog"
            class="group bg-accent hover:bg-accent-hover text-white font-semibold px-8 py-4 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-1 relative overflow-hidden"
          >
            <span class="relative z-10 flex items-center justify-center gap-2">
              <span class="text-xl group-hover:animate-bounce">üìñ</span>
              <span>Read Expert Guides</span>
            </span>
            <!-- Button shimmer effect -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
            </div>
          </a>
          
          <a
            href="/contact"
            class="group border-2 border-accent text-accent hover:bg-accent hover:text-white font-semibold px-8 py-4 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-1 relative overflow-hidden"
          >
            <span class="relative z-10 flex items-center justify-center gap-2">
              <span class="text-xl group-hover:animate-bounce">‚úâÔ∏è</span>
              <span>Get In Touch</span>
            </span>
            <!-- Button shimmer effect -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
            </div>
          </a>
        </div>
        
        <!-- Stats Section -->
        <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="flex flex-col items-center p-6 bg-white/30 backdrop-blur-sm rounded-2xl border border-accent/20 hover:border-accent/40 transition-all duration-300 hover:shadow-lg">
            <div class="text-3xl text-accent mb-2">üèÜ</div>
            <div class="text-2xl font-bold text-heading">1000+</div>
            <div class="text-sm text-gray-dark">Successful Finds</div>
          </div>
          
          <div class="flex flex-col items-center p-6 bg-white/30 backdrop-blur-sm rounded-2xl border border-accent/20 hover:border-accent/40 transition-all duration-300 hover:shadow-lg">
            <div class="text-3xl text-accent mb-2">üë•</div>
            <div class="text-2xl font-bold text-heading">500+</div>
            <div class="text-sm text-gray-dark">Active Members</div>
          </div>
          
          <div class="flex flex-col items-center p-6 bg-white/30 backdrop-blur-sm rounded-2xl border border-accent/20 hover:border-accent/40 transition-all duration-300 hover:shadow-lg">
            <div class="text-3xl text-accent mb-2">üìç</div>
            <div class="text-2xl font-bold text-heading">100+</div>
            <div class="text-sm text-gray-dark">Prime Locations</div>
          </div>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>