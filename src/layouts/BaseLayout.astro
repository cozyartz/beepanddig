---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ToastProvider from '../components/ToastProvider.jsx';
import ThemeToggle from '../components/ThemeToggle.jsx';
import { ViewTransitions } from 'astro:transitions';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <slot name="head" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col animated-bg relative overflow-x-hidden">
    <!-- Enhanced background decoration -->
    <div class="fixed inset-0 pointer-events-none z-0">
      <div class="absolute top-0 left-0 w-full h-full opacity-40">
        <div class="absolute top-10 left-10 w-32 h-32 bg-accent/15 rounded-full blur-3xl animate-pulse float-animation"></div>
        <div class="absolute top-1/3 right-1/4 w-48 h-48 bg-accent/10 rounded-full blur-3xl animate-pulse float-animation" style="animation-delay: 2s;"></div>
        <div class="absolute bottom-1/4 left-1/3 w-40 h-40 bg-accent/12 rounded-full blur-3xl animate-pulse float-animation" style="animation-delay: 4s;"></div>
        <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-gradient-to-r from-accent/8 to-accent-light/8 rounded-full blur-3xl animate-pulse float-animation transform -translate-x-1/2 -translate-y-1/2" style="animation-delay: 1s;"></div>
      </div>
    </div>
    
    <!-- Content wrapper -->
    <div class="relative z-10 flex flex-col min-h-screen glass">
      <Header />
      <main class="flex-1 max-w-6xl mx-auto px-6 py-10 w-full">
        <slot />
      </main>
      <Footer />
    </div>
    
    <!-- Interactive elements -->
    <ToastProvider client:load />
    <ThemeToggle client:load />
  </body>
</html>