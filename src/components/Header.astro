---
import NavLink from './NavLink.astro';
import { SITE_TITLE } from '../consts';
import MobileMenu from './MobileMenu.jsx';
---

<header class="sticky top-0 z-50 bg-background/95 backdrop-blur-lg border-b border-gray-light/20 shadow-lg">
  <nav class="flex items-center justify-between max-w-6xl mx-auto px-6 py-4">
    <!-- Logo/Brand -->
    <div class="flex items-center gap-3">
      <a href="/" class="flex items-center gap-3 no-underline hover:text-accent-hover transition-all duration-300 group">
        <div class="relative">
          <span class="text-accent text-4xl drop-shadow-lg group-hover:animate-bounce">⚒️</span>
          <div class="absolute inset-0 bg-accent/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl font-extrabold bg-gradient-to-r from-heading to-accent bg-clip-text text-transparent tracking-tight">
            {SITE_TITLE}
          </span>
          <span class="text-xs text-gray-dark font-medium tracking-wider uppercase opacity-80">
            Michigan Metal Detecting
          </span>
        </div>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="internal-links hidden lg:flex gap-8 text-base items-center">
      <NavLink href="/">Home</NavLink>
      <NavLink href="/blog">Blog</NavLink>
      <NavLink href="/about">About</NavLink>
      <NavLink href="/contact">Contact</NavLink>
      <NavLink href="/gear">Gear</NavLink>
    </div>

    <!-- Social & CTA -->
    <div class="hidden md:flex items-center gap-4">
      <div class="social-links flex items-center gap-2">
        <a 
          href="https://x.com/DiggityDogHunt"
          class="text-gray-dark hover:text-accent transition-all duration-300 hover:scale-110 p-2 rounded-full hover:bg-accent/10 hover:shadow-lg"
          aria-label="Follow Diggity Dog on X"
        >
          🐦
        </a>
        <a 
          href="https://github.com/DiggityDog/beepanddig"
          class="text-gray-dark hover:text-accent transition-all duration-300 hover:scale-110 p-2 rounded-full hover:bg-accent/10 hover:shadow-lg"
          aria-label="Beep & Dig on GitHub"
        >
          🔗
        </a>
      </div>
      <a 
        href="/gear" 
        class="bg-accent hover:bg-accent-hover text-white font-semibold px-4 py-2 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 text-sm"
      >
        Shop Gear ⚒️
      </a>
    </div>

    <!-- Mobile Menu Component -->
    <MobileMenu client:load />
  </nav>
</header>