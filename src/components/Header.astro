---
import NavLink from './NavLink.astro';
import SocialLink from './SocialLink.jsx';
import { SITE_TITLE } from '../consts';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faShovel, faUsers } from '@fortawesome/pro-solid-svg-icons';
import { faXTwitter, faGithub } from '@fortawesome/pro-brands-svg-icons';
---

<header class="bg-gradient-to-b from-background to-accent/10 shadow-lg py-6 px-6">
  <nav class="flex items-center justify-between max-w-6xl mx-auto">
    <h1 class="text-2xl font-extrabold text-heading tracking-tight">
      <a href="/" class="flex items-center gap-3 no-underline hover:text-accent-hover">
        <FontAwesomeIcon icon={faShovel} class="text-accent animate-pulse" size="2x" />
        {SITE_TITLE}
      </a>
    </h1>

    <div class="internal-links hidden sm:flex gap-5 text-base items-center">
      <NavLink href="/">Home</NavLink>
      <NavLink href="/blog">Blog</NavLink>
      <NavLink href="/about">About</NavLink>
      <NavLink href="/contact">Contact</NavLink>
    </div>

    <div class="social-links hidden sm:flex items-center gap-5">
      <FontAwesomeIcon icon={faUsers} class="text-accent animate-bounce" size="lg" />
      <SocialLink
        href="https://x.com/DiggityDogHunt"
        label="Follow Diggity Dog on X"
        icon={faXTwitter}
        client:load
      />
      <SocialLink
        href="https://github.com/DiggityDog/beepanddig"
        label="Beep & Dig on GitHub"
        icon={faGithub}
        client:load
      />
    </div>
  </nav>
</header>
